<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/notesListFragment">

    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.example.adrian012_bbdd.presentation.fragment.list.NotesListFragment"
        android:label="NotesListFragment"
        tools:layout="@layout/fragment_notes_list" >
        <action
            android:id="@+id/action_notesListFragment_to_notesFormFragment"
            app:destination="@id/notesFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/notesFormFragment"
        android:name="com.example.adrian012_bbdd.presentation.fragment.form.NotesFormFragment"
        android:label="NotesFormFragment"
        tools:layout="@layout/fragment_notes_form">
        <argument
            android:name="inputStateNote"
            app:argType="com.example.adrian012_bbdd.domain.model.NoteDomainModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>